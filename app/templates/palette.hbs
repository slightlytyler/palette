<section class="editor">
  <h2 title="Title">Title</h2>

  <div>
    <ul class="palette">
      {{#each itemController="color"}}
        <li {{bind-attr style=style}} {{action "editColor" on="doubleClick"}} class="color">
          {{#if isEditing}}
            {{input type="text" class="edit--title" value=title insert-newline="acceptChanges"}}
            {{col-pick-input type="text" class="edit--value" value=value insert-newline="acceptChanges"}}
          {{else}}
            <span class="name">{{title}}</span>
            <span class="value">#{{value}}</span>
          {{/if}}
  
          <button {{action "removeColor"}} class="remove">X</button>
        </li>
      {{/each}}
    </ul>

    <button {{action "createColor"}} class="add-color"><span>+</span></button>
  </div>

</section>