.tabs
  position: fixed
  left: 0
  top: 2rem
  
  ul
    width: 5rem
    margin: 0;
    padding: 0;

    li
      position: relative
      width: 100%
      height: 4rem
      color: rgba(255,255,255,.45)
      background-color: $clr-blue-grey-700
      font-family: sans-serif

      &.active
        border-right: .4rem solid $clr-blue-400
        background-color: $clr-blue-grey-800

      &.seperator
        border-top: 1px solid $clr-blue-grey-900
        box-shadow: inset 0 1px 0 rgba(255,255,255,.1)

      &:hover
        background-color: $clr-blue-grey-900
        box-shadow: none

      &:hover, &.active
        color: white

    span
      position: absolute
      top: 50%;
      left: 50%
      transform: translate(-50%,-50%)