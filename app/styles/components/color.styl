.palette .color
  position: relative
  col(1/3, cycle: 3)

  height: 0
  padding-bottom:  20%
  margin-bottom: 1rem

  .name, .value, .remove
    position: absolute
    background-color: rgba(0,0,0,.6)
    color: white
    padding: .2rem


  .name
    left: 0
    top: 0

  .value
    bottom: 0
    right: 0

  .remove
    top: 0
    right: 0
    border: none