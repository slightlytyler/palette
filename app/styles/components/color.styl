.palette .color
  position: relative
  col(1/3, cycle: 3)

  height: 0
  padding-bottom:  20%
  margin-bottom: 1rem

  border: 1px solid rgba(0, 0, 0, 0.9)
  box-shadow: inset 0 1px rgba(255, 255, 255, 0.15), 0 0 15px rgba(0, 0, 0, 0.6)

  .name, .value, .remove
    position: absolute
    padding: .2rem

    background-color: rgba(0,0,0,.6)
    color: white
    text-shadow: 0 -1px rgba(0, 0, 0, 0.3);

  .name
    left: 0
    top: 0

  .value
    bottom: 0
    right: 0

  .remove
    top: 0
    right: 0
    border: none