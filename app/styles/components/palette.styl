.palette
  @extend $clear-list
  @extend $inner-container
  cf()

  li
    position: relative
    span(1/3, cycle: 3)

    height: 0
    padding-bottom:  20%
    margin-bottom: 1rem

  .name, .color
    position: absolute
    background-color: rgba(0,0,0,.6)
    color: white
    padding: .2rem


  .name
    left: 0
    top: 0

  .color
    bottom: 0
    right: 0